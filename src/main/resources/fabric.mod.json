{
  "schemaVersion": 1,
  "id": "craftconnect",
  "version": "${version}",

  "name": "CraftConnect",
  "description": "Fabric plugin for connecting Discord and Minecraft servers",
  "authors": [
    "Damian Bednarczyk"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "Apache-2.0",
  "icon": "assets.modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.dxbednarczyk.craftconnect.CraftConnect"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.14",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
